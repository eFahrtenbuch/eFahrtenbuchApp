<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/background">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:fontFamily="@font/pacifico"
        android:text="Fahrtenbuch"
        android:textColor="#fff"
        android:textSize="50sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btAnmelden"
        android:layout_width="370dp"
        android:layout_height="60dp"
        android:layout_marginTop="65dp"
        android:background="@android:drawable/bottom_bar"
        android:backgroundTint="#7A0000"
        android:fontFamily="@font/josefin_sans"
        android:text="anmelden"
        android:textColor="#fff"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tfPasswort" />

    <Button
        android:id="@+id/btNeuAccErstellen"
        android:layout_width="370dp"
        android:layout_height="60dp"
        android:layout_marginTop="5dp"
        android:background="@android:drawable/bottom_bar"
        android:backgroundTint="#7A0000"
        android:fontFamily="@font/josefin_sans"
        android:text="neuen account erstellen"
        android:textColor="#fff"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/josefin_sans"
        android:text="Bitte geben Sie Ihre Anmeldedaten ein !"
        android:textColor="#fff"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <EditText
        android:id="@+id/tfName"
        style="@style/Widget.AppCompat.EditText"
        android:layout_width="370dp"
        android:layout_height="60dp"
        android:layout_marginTop="90dp"
        android:background="#fff"
        android:ems="10"
        android:fontFamily="@font/josefin_sans"
        android:hint="Name"
        android:inputType="text"
        android:paddingLeft="20sp"
        android:textColor="#000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <EditText
        android:id="@+id/tfPasswort"
        style="@style/Widget.AppCompat.EditText"
        android:layout_width="370dp"
        android:layout_height="60dp"
        android:layout_marginTop="32dp"
        android:background="#fff"
        android:ems="10"
        android:fontFamily="@font/josefin_sans"
        android:hint="Passwort"
        android:inputType="textPassword"
        android:paddingLeft="20sp"
        android:textColor="#000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tfName" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/josefin_sans"
        android:text="Noch keinen Account ?"
        android:textColor="#fff"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btAnmelden" />

</androidx.constraintlayout.widget.ConstraintLayout>